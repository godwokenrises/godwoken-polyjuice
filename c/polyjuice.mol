// --- ETH Address Registry ---
array Byte20 [byte; 20];

union ETHAddrRegArgs {
    EthToGw,
    GwToEth,
    SetMapping,
    BatchSetMapping,
}

struct EthToGw {
    eth_address: Byte20,
}

struct GwToEth {
    gw_script_hash: Byte32,
}

struct SetMapping {
    gw_script_hash: Byte32,
    fee: Uint64, // tx fee in CKB shannon
}

table BatchSetMapping {
    gw_script_hashes: Byte32Vec,
    fee: Uint64, // tx fee in CKB shannon
}

// --- end of ETH Address Registry ---
